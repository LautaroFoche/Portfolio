---
import GitHub from "./icons/GitHub.astro"
import Python from "./icons/Python.astro"
import PowerBI from "./icons/PowerBI.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import SQL from "./icons/SQL.astro"


const TAGS = {
  PYTHON: {
    name: "Python",
    class: "bg-black text-white",
    icon: Python,
  },
  POWERBI: {
    name: "Power BI",
    class: "bg-[#003159] text-white",
    icon: PowerBI,
  },
  SQL: {
    name: "SQL Server",
    class: "bg-[#ffffff] text-black",
    icon: SQL,
  },
}
const PROJECTS = [
  {
    title: "Oportunidad de mejoras y adquisicion de talentos de NBA",
    description:
      "Proyecto final de Henry. Analisis sobre el rendimiento y salud de jugadores de la NBA, ademas, identificacion de talentos emergentes para la compra de los mismos.",
    link: "",
    github: "https://github.com/Floryofre/SmartPro_Analytics",
    image: 'https://github.com/LautaroFoche/portfolio/raw/master/src/components/img/primer1.PNG',
    tags: [TAGS.PYTHON, TAGS.POWERBI, TAGS.SQL],
  },
  {
    title: "Expansion estrategica de laboratorio BioGenesys",
    description:
      "Proyecto de Henry. Analisis sobre la pandemia de COVID-19 para la expansion de un laboratorio de vacunacion en Latinoamerica.",
    link: "",
    github: "https://github.com/LautaroFoche/Expansion-Biogenesys",
    image: "https://github.com/LautaroFoche/portfolio/raw/master/src/components/img/para%20p%C3%B3r.PNG",
    tags: [TAGS.PYTHON, TAGS.POWERBI],
  },
  {
    title: "Analisis de ventas de AdventureWorks",
    description:
      'Proyecto de Henry. Analisis sobre las ventas de la empresa fantasia "Adventure Works" utilizando SQL Server y Power BI .',
    link: "",
    github: "https://github.com/",
    image: 'https://github.com/LautaroFoche/portfolio/raw/master/src/components/img/primer1.PNG',
    tags: [TAGS.POWERBI, TAGS.SQL],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="PF Henry" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Views
            </LinkButton>
          )}
          
        </footer>
        
    </div>
  </div>
  
</article>
    ))
  }
</div>



